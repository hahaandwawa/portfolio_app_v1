{
  "name": "portfolio-app",
  "version": "1.0.0",
  "description": "Portfolio App - Investment record management",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.portfolio.app",
    "productName": "Portfolio App",
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg",
      "icon": null
    },
    "dmg": {
      "title": "Portfolio App",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
